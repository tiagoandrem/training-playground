pipeline {
    agent { 
        docker { 
            image 'alpine:latest' 
        }
    }
    stages {
        stage('global') {
            steps {
                script {
                    def buildConfigs = readJSON text: '[{name: "build", command: "date"}, {name: "run", command: "hostname"}]'
            buildConfigs.each{ buildConfig ->
                stage(buildConfig.name) {
                        sh "$buildConfig.command"
                    }
                }
                }
            }
        }
    }
}
